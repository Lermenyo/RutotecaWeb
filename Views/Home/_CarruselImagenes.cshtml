@model List<ImagenesDTO>
    <div id="carouselExampleIndicators" class="carousel slide min-vh-100" data-ride="carousel">
        <ol class="carousel-indicators">
            @foreach (var item in Model)
            {
                @if (Model.IndexOf(item) == 0)
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to="@Model.IndexOf(item)" class="active"></li>
                }
                else
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to="@Model.IndexOf(item)"></li>
                }
            }
        </ol>
        <div class="carousel-inner">
            @foreach (var item in Model)
            {
                @if (Model.IndexOf(item) == 0)
                {
                    <div class="carousel-item active">
                        <img src="@item.Url" class="d-block w-100" alt="@item.Descripcion">
                    </div>
                }
                else
                {
                    <div class="carousel-item">
                        <img src="@item.Url" class="d-block w-100" alt="@item.Descripcion">
                    </div>
                }
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>